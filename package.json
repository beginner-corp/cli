{
  "name": "@begin/cli",
  "version": "0.0.2",
  "bin": {
    "begin": "src/index.js"
  },
  "main": "src/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "npm run lint && npm run coverage && npm run test:integration",
    "test:unit": "cross-env tape 'test/unit/**/*-test.js' | tap-arc",
    "test:integration": "cross-env NODE_ENV=testing tape 'test/integration/**/*-test.js' | tap-arc",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test:unit",
    "lint": "eslint . --fix",
    "build": "cross-env scripts/binary-config && npx pkg scripts && rm -f commit",
    "deploy": "BUILD_ALL=true npm run build && scripts/deploy"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@architect/inventory": "3.1.1",
    "@architect/parser": "6.0.0",
    "@architect/sandbox": "5.2.2",
    "@begin/api": "1.4.1",
    "@begin/chunker": "1.1.2",
    "enquirer": "2.3.6",
    "jsonschema": "~1.4.1",
    "lambda-runtimes": "1.1.1",
    "minimist": "1.2.6",
    "picocolors": "1.0.0",
    "pluralize": "~8.0.0",
    "strip-ansi": "6.0.1",
    "tiny-json-http": "7.4.2",
    "zip-dir": "2.0.0"
  },
  "devDependencies": {
    "@architect/eslint-config": "^2.0.1",
    "adm-zip": "~0.5.9",
    "aws-sdk": "2.1001.0",
    "cross-env": "^7.0.3",
    "eslint": "~8.12.0",
    "nyc": "^15.1.0",
    "pkg": "~5.5.2",
    "proxyquire": "~2.1.3",
    "tap-arc": "~0.3.4",
    "tap-spec": "^5.0.0",
    "tape": "~5.5.2"
  },
  "eslintConfig": {
    "extends": "@architect/eslint-config",
    "rules": {
      "global-require": "off"
    }
  }
}
